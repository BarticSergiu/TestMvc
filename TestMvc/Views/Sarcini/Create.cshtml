@model TestMvc.Models.Sarcina

@{
    ViewData["Title"] = "Adaugă";
}

<h1>Adaugă sarcină</h1>
<div class="mt-5">
<h4>Sarcina</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="Denumire" class="control-label"></label>
                <input asp-for="Denumire" class="form-control" />
                <span asp-validation-for="Denumire" class="text-danger"></span>
            </div>
            </div>
                <div class="mt-3">
            <div class="form-group">
                <label asp-for="Descriere" class="control-label"></label>
                <textarea asp-for="Descriere" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descriere" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
                <div class="form-group">
                    <label asp-for="Prioritate" class="control-label"></label>
                    <div>
                    @using (Html.BeginForm("Index", "Sarcini", FormMethod.Post))
                    {
                        <b>
                            <span style="color:#f25022;">Urgent: </span> @Html.RadioButton("Prioritate", "Urgent",false)
                                <span style="color:#ffb900;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Mare: </span> @Html.RadioButton("Prioritate", "Mare",true)
                                <span style="color:#7fba00;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Medie: </span> @Html.RadioButton("Prioritate", "Medie",false)
                                <span style="color:#00a4ef;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Mică: </span> @Html.RadioButton("Prioritate", "Mică",false)
                        </b>
                    }
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <div class="form-group">
                    <label asp-for="TipSarcina" class="control-label"></label>
                    @using (Html.BeginForm("Index", "Sarcini", FormMethod.Post))
                    {
                        <b>
                            <span style="color:#ec1c24;">Dezvoltare: </span> @Html.RadioButton("TipSarcina", "Dezvoltare",false)
                            <span style="color:#fcb813;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Debug: </span> @Html.RadioButton("TipSarcina", "Debug",true)
                            <span style="color:#205eab;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Suport: </span> @Html.RadioButton("TipSarcina", "Suport",false)
                        </b>
                    }
                    </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="OreEstimate" class="control-label"></label>
                <input asp-for="OreEstimate" class="form-control" />
                <span asp-validation-for="OreEstimate" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="Persoana" class="control-label"></label>
                <select asp-for="Persoana" class="form-control" asp-items="@ViewBag.PersoanaId"></select>
                    <span asp-validation-for="Persoana" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
                <input type="submit" value="Salvează" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
